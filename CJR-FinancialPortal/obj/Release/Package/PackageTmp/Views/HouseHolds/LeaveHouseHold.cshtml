@model IEnumerable<CJR_FinancialPortal.Models.UserInHouseholdVeiwModel>


@{
    ViewBag.Title = "Leave or Remove User From Household";
}
@{
    Layout = "~/Views/Shared/_DashboardMain.cshtml";
}
<h3>Leave or Remove User From Household</h3>
<div>
    <hr />
    <table class="table table-colored">
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.FullName)*@
               Name
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Email)*@
                Email
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.User.FirstName)&emsp;@Html.DisplayFor(m => item.User.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Email)
                </td>
                <td>
                    @Html.ActionLink("Remove", "Delete", new { id = item.User.Id })
                </td>
            </tr>
        }

    </table>
</div>
