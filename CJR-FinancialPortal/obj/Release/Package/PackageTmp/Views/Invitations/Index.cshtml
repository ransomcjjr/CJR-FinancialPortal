@model IEnumerable<CJR_FinancialPortal.Models.Invitation>

@{
    ViewBag.Title = "Index";
}
@{
    Layout = "~/Views/Shared/_DashboardMain.cshtml";
}
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.HouseHold.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SentBy.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InvEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InvEmailConfirm)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SecretCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CodeUsed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SentTimeStamp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Archive)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HouseHold.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SentBy.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InvEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InvEmailConfirm)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SecretCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CodeUsed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SentTimeStamp)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Archive)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
